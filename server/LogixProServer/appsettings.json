{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "NLog": {
    "throwConfigExceptions": true,
    "targets": {
      "async": true,
      "logfile": {
        "type": "File",
        "fileName": "C:/ProgramData/PeakLogix/LogixPro/Logs/log-${date:format=yyyy-MM-dd}.log"
      },
      "logconsole": {
        "type": "ColoredConsole"
      }
    },
    "rules": [
      {
        "logger": "*",
        "minLevel": "Debug",
        "writeTo": "logconsole"
      },
      {
        "logger": "*",
        "minLevel": "Debug",
        "writeTo": "logfile"
      }
    ]
  },
  "HttpServer": {
    "EnableHttpsRedirection": true,
    "Endpoints": [
      {
        "host": "logixpro.peaklogix.com",
        "port": 80,
        "scheme": "http",
        "StoreName": "",
        "StoreLocation": "",
        "FilePath": "",
        "Password": "",
        "ServiceName": "PeakLogix.PickProApi",
        "CertificateThumbprint": "COPY_FROM_PICKPRO_API_SETTINGS"
      },
      {
        "host": "logixpro.peaklogix.com",
        "port": 443,
        "scheme": "https",
        "StoreName": "My",
        "StoreLocation": "",
        "FilePath": "",
        "Password": "",
        "ServiceName": "PeakLogix.PickProApi",
        "CertificateThumbprint": "COPY_FROM_PICKPRO_API_SETTINGS"
      }
    ]
  },
  "AppSettings": {
    "AppName": "LogixPro",
    "AppVersion": "0.0.0",
    "BuildDate": "0000-00-00",
    "ApiUrl": "http://localhost:5000"
  }
}
